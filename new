<script>
  function toggleDropdown(link) {
    const dropdown = link.nextElementSibling;
    dropdown.classList.toggle('open');
  }

  function closeSidebar() {
    document.querySelector('.mobile-sidebar').classList.remove('active');
    document.body.style.overflow = '';
  }

  // Optional: open sidebar toggle logic (if you use a button with .sidebar-toggle)
  document.addEventListener('DOMContentLoaded', () => {
    const toggleBtn = document.querySelector('.sidebar-toggle');
    if (toggleBtn) {
      toggleBtn.addEventListener('click', () => {
        document.querySelector('.mobile-sidebar').classList.add('active');
        document.body.style.overflow = 'hidden';
      });
    }
  });
</script>


